{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./dist-esm",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "dist-esm",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}